import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.TimeZone;

public class WorldClock {
    public static void main(String[] args) {
        // lista di fusi orari
        String[] timezones = {"America/Los_Angeles", "America/New_York", "Europe/London", "Europe/Rome", "Asia/Tokyo", "Australia/Sydney"};

        // ottieni l'ora corrente in ciascun fuso orario
        for (String timezone : timezones) {
            TimeZone tz = TimeZone.getTimeZone(timezone);
            Calendar c = Calendar.getInstance(tz);
            SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
            sdf.setTimeZone(tz);
            System.out.println(timezone + ": " + sdf.format(c.getTime()));
        }
    }
}
